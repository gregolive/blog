
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <div class="form-body">
      <div>
        <div class="form-label">
          <strong><%= form.label :commenter %></strong><br>
        </div>
        <%= form.text_field :commenter, class: ['form-control', 'form-title'] %>
      </div>

      <div>
        <div class="form-label">
          <strong><%= form.label :body %></strong><br>
        </div>
        <%= form.text_area :body, class: 'form-control' %>
      </div>

      <!-- <div>
        <strong><%= form.label :status %></strong><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
      </div> -->

      <div>
        <%= form.submit class: "new-button" %>
      </div>
    </div>
  <% end %>
